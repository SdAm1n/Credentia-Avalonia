<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             x:Class="Credentia.Views.NavigationBarView">
    <StackPanel>
        <ui:NavigationView  Height="520">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home" Tag="HomePage" IconSource="Library" />
                <ui:NavigationViewItem Content="Card" Tag="SamplePage2" IconSource="Map" />
                <ui:NavigationViewItem Content="Profile" Tag="SamplePage3" IconSource="Tag" />
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Account" Tag="SamplePage4" IconSource="Contact" />
                <ui:NavigationViewItem Content="Your Cart" Tag="SamplePage5" IconSource="Shop" />
                <ui:NavigationViewItem Content="Help" Tag="SamplePage6" IconSource="Help" />
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </StackPanel>
</UserControl>

